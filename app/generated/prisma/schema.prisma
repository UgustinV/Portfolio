generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id          String   @id @unique @default(cuid())
  title       String
  description String
  projectUrl  String
  imageUrl    String
  tags        String[]
  createdAt   DateTime @default(now())
}

model User {
  id         String   @id @unique @default(cuid())
  email      String   @unique
  isAdmin    Boolean  @default(false)
  lastActive DateTime @default(now())
}

model Competence {
  id       String @id @unique @default(cuid())
  name     String
  imageUrl String
  url      String
  level    Int
}
